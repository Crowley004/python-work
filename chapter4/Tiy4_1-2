pizzas = ["pretzel", "deep dish", "stuffed crust"]

for pizza in pizzas:
    print(f"\nI like {pizza} pizza.")

print("I just really like pizza!")

pets = ["cat", "dog", "pig"]

for pet in pets:
    print(pet)
    print(f"\nA {pet} would make a good pet.")
print("Any of these would make a great pet.")